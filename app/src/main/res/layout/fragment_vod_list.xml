<?xml version="1.0" encoding="utf-8"?>
<pullrefreshview.layout.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <pullrefreshview.support.view.LockHeaderView
        android:id="@+id/fragment_vod_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <pullrefreshview.support.view.LockFooterView
        android:id="@+id/fragment_vod_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_vod_rv"
        />


</pullrefreshview.layout.PullRefreshLayout>